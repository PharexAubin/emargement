@using ApiPointeur.Models;
@{
    var ListeEleve = ViewData["Eleves"] as List<Eleve>;
}

<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
</head>

<h2>Liste de présence</h2>

<table class="table table-sm table-striped table-bordered m-2" id="client">
    <thead>
        <tr>
            <th>@Html.DisplayName("Id")</th>
            <th>@Html.DisplayName("Nom")</th>
            <th>@Html.DisplayName("Prenom")</th>
            <th>@Html.DisplayName("Telephone")</th>
            <th>@Html.DisplayName("Email")</th>
            <th>@Html.DisplayName(" ")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Eleve row in ListeEleve)
        {
            <tr>
                <td>@row.Id</td>
                <td>@row.Nom</td>
                <td>@row.Prenom</td>
                <td>@row.Telephone</td>
                <td>@row.Email</td>
                <td><a href="Home/views/@row.Id">view</a></td>
            </tr>
        }
    </tbody>
    
</table>


<script>
    $(document).ready(function () {
        $("#client").DataTable();
    });
</script>

